<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <com.otaliastudios.cameraview.CameraView
        android:id="@+id/cameraViewHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:keepScreenOn="true"
        android:soundEffectsEnabled="true"
        app:cameraFlash="auto"
        app:cameraJpegQuality="100"
        app:cameraPlaySounds="true"
        app:cameraSessionType="picture"
        app:cameraVideoMaxSize="0"
        app:cameraWhiteBalance="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.502" >


    </com.otaliastudios.cameraview.CameraView>

    <ImageView
        android:id="@+id/imgCapturePhoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/cameraViewHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/capture_icon" />

    <ImageView
        android:id="@+id/imgSwapCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgCapturePhoto"
        app:layout_constraintStart_toEndOf="@+id/imgCapturePhoto"
        app:layout_constraintTop_toTopOf="@+id/imgCapturePhoto"
        app:srcCompat="@drawable/icon_swap" />

</android.support.constraint.ConstraintLayout>