<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fatihsevban.instakotlinapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Home.HomeActivity.ActivityHome" />
        <activity android:name=".News.ActivityNews" />
        <activity android:name=".Profile.ActivityProfile" />
        <activity android:name=".Search.ActivitySearch" />
        <activity android:name=".Share.ActivityShare" />
        <activity android:name=".Profile.ActivityProfileSettings.ActivityProfileSettings" />
        <activity android:name=".Register.ActivityRegister" />
        <activity android:name=".Login.ActivityLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Home.Chatting.ActivityHomeChat"></activity>
    </application>

</manifest>